@model IEnumerable<BookList.Models.Book>
@{
    ViewData["Title"] = "Index";
}

<br />
<h3>Lista de Livro</h3>
<hr />
<p>
    <a asp-action="Create" class="btn btn-sm btn-primary"> Criar Novo </a>
</p>
<br />

<div class="form-border">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(m=>m.Name)
            </th>
            <th></th>
        </tr>
        @foreach(var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(m=>item.Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-success"> Editar </a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-primary"> Detalhes </a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger"> Deletar </a>
                </td>
            </tr>
        }
    </table>
</div>

